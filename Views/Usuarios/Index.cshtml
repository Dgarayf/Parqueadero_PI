@model IEnumerable<Parqueadero.Models.Usuarios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="todo">

    <p>
        @Html.ActionLink("Create New", "Create", null, new {@class="crear"})
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDocumeto)
            </th>
            <th>
                <p>Personalizar</p>
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDocumeto)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit",null ,new { id = item.Id_Usuario, @class="item"}) |
                    @Html.ActionLink("Details", "Details",null, new { id = item.Id_Usuario, @class = "item" }) |
                    @Html.ActionLink("Delete", "Delete",null, new { id = item.Id_Usuario, @class = "item" })
                </td>
            </tr>
        }

    </table>

</div>